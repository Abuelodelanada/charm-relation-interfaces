{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/canonical/charm-relation-interfaces/ingress/schemas/consumer.json",
  "type": "object",
  "title": "The root schema",
  "description": "The root schema comprises the entire JSON document.",
  "default": {},
  "examples": [
    {
      "name": "app-name",
      "host": "hostname",
      "port": 4242,
      "model": "model-name"
    }
  ],
  "required": [
    "data"
  ],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "application name",
      "description": "The name of the unit requesting ingress.",
      "default": null,
      "examples": [
        "prometheus-k8s"
      ]
    },
    "model": {
      "$id": "#/properties/model",
      "type": "string",
      "title": "model name",
      "description": "The name of the model the unit requesting ingress is in.",
      "default": null,
      "examples": [
        "my-model"
      ]
    },
    "host": {
      "$id": "#/properties/host",
      "type": "string",
      "title": "hostname",
      "description": "Hostname the unit wishes to be exposed.",
      "default": null,
      "examples": [
        "foo.bar.baz.com"
      ]
    },
    "port": {
      "$id": "#/properties/port",
      "type": "integer",
      "title": "port",
      "description": "The port the unit wishes to be exposed.",
      "default": null,
      "examples": [
        4242
      ]
    },
    "additionalProperties": false
  }
}